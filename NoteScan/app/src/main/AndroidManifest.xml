<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Uprawnienie do korzystania z aparatu -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Uprawnienie do odczytu pamięci zewnętrznej (galeria) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Uprawnienie do zapisu w pamięci zewnętrznej (jeśli wymagane) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Obsługa zarządzania pamięcią zewnętrzną (dla Androida 11+) -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:targetApi="30" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <!-- Informacja o wymaganym sprzęcie aparatu -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteScan"
        tools:targetApi="31">

        <!-- Główna aktywność aplikacji -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Theme is optional and only needed if default theme has no action bar. -->
        <!-- Theme is optional and only needed if default theme has no action bar. -->
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"
            tools:ignore="MissingClass" /> <!-- optional (needed if default theme has no action bar) -->
        <!-- optional (needed if default theme has no action bar) --> <!-- optional (needed if default theme has no action bar) -->

        <!-- Aktywność obsługująca aparat -->
        <activity
            android:name=".CameraActivity"
            android:exported="true" />

        <!-- Meta-dane dotyczące wstępnie załadowanych fontów (opcjonalne) -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
